<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f_blue"
    tools:context=".SetupReadActivity">

    <ImageView
        android:id="@+id/logo_2"
        android:layout_width="156dp"
        android:layout_height="93dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fr_logo2" />

    <TextView
        android:id="@+id/setupTitle"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="@string/setup_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_2" />

    <FrameLayout
        android:id="@+id/readInProgressLayout"
        android:layout_width="296dp"
        android:layout_height="165dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupTitle">

    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="290dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readInProgressLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/startFromEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start From" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/targetInputLayout"
        android:layout_width="290dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/targetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/startReadBtn"
        android:layout_width="298dp"
        android:layout_height="79dp"
        android:layout_marginTop="8dp"
        android:text="@string/start_read_btn"
        android:textAlignment="center"
        android:textSize="16sp"
        app:icon="@drawable/start_read_icon_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/targetInputLayout" />

    <Button
        android:id="@+id/view_stats_btn"
        android:layout_width="300dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:background="@color/fpurple"
        android:text="@string/view_stats_btn"
        android:textSize="16sp"
        app:icon="@drawable/stat_icon_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startReadBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>