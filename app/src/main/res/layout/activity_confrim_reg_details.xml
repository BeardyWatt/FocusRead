<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f_blue"
    tools:context=".ConfirmRegDetailsActivity">

    <TextView
        android:id="@+id/confirm_reg_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/confirm_reg_detail_title"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_email"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        android:background="@color/f_blue"
        android:contentDescription="TODO"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_reg_detail_title" />

    <TextView
        android:id="@+id/confirm_reg_bio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/confirm_reg_detail_bio1"
        android:textAlignment="center"
        android:textColor="#3E2723"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_email" />

    <TextView
        android:id="@+id/user_reg_email"
        android:layout_width="166dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:text="@string/confirm_reg_detail_email"
        android:textAlignment="center"
        android:textColor="#3E2723"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_reg_bio1" />

    <TextView
        android:id="@+id/confirm_reg_bio2"
        android:layout_width="275dp"
        android:layout_height="144dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_reg_detail_bio2"
        android:textAlignment="center"
        android:textColor="#3E2723"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_reg_email" />

    <TextView
        android:id="@+id/no_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/no_email_text"
        android:textColor="#3E2723"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_reg_bio2" />

    <Button
        android:id="@+id/no_email_btn"
        android:layout_width="178dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="@string/resend_btn"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_email_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>